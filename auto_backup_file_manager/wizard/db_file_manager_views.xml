<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="db_file_manager_wizard" model="ir.ui.view">
        <field name="name">db_file_manager_wizard</field>
        <field name="model">db.backup.manager</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="backup_id" invisible="1"/>
                </header>
                <group>
                    <field name="method"/>
                    <field name="folder"/>
                </group>
                <field name="file_ids"/>
<!--                    <tree editable="bottom" create="False" multiedit="1">-->
<!--                        <field name="name"/>-->
<!--                        <field name="size"/>-->
<!--                    </tree>-->
<!--                </field>-->
            </form>
        </field>
    </record>
    <record id="db_file_manager_files_tree" model="ir.ui.view">
        <field name="name">db_file_manager_files_tree</field>
        <field name="model">db.backup.manager.file</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="False" delete="False" multi_edit="1">
                <field name="name"/>
                <field name="size" optional="hide"/>
                <field name="size_kb" optional="hide"/>
                <field name="size_mb" optional="show"/>
                <field name="size_gb" optional="hide"/>
                <button string="Delete file"
                        type="object"
                        name="action_delete_file"
                        icon="fa-trash" />

            </tree>
        </field>
    </record>
    <record id="action_backup_file_manager" model="ir.actions.act_window">
        <field name="name">Backup files manager</field>
        <field name="res_model">db.backup.manager</field>
    </record>
</odoo>
