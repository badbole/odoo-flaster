<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_workcenter_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.form</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Allow users" name="users">
                    <field name="allowed_user_ids"/>
                </page>
            </notebook>
        </field>
    </record>
    <record id="mrp_workcenter_users_tree" model="ir.ui.view">
        <field name="name">mrp_workcenter_users_tree</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_tree_view"/>
        <field name="arch" type="xml">
            <field name="tag_ids" position="before">
                <field name="allowed_user_ids" widget="many2many_tags" optional="hide"/>
            </field>
        </field>
    </record>

</odoo>
