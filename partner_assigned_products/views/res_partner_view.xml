<odoo>
    <record id="res_user_form_view_restrict" model="ir.ui.view">
        <field name="name">res.partner.product.restriction.form.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="inside">
                <group>
                    <group>
                        <field name="product_template_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="product_variant_ids" widget="many2many_tags"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
