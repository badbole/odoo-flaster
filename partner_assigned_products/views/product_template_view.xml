<odoo>
    <record id="view_product_template_common_form" model="ir.ui.view">
        <field name="name">view_product_template_common_form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Product partners" name="product_partners">
                    <group>
                        <field name="tmpl_partner_ids" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
    <record id="view_product_template_tree" model="ir.ui.view">
        <field name="name">view_product_template_tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="active" position="before">
                <field name="tmpl_partner_ids" widget="many2many_tags" optional="hide"/>
            </field>
        </field>
    </record>
    <record id="product_template_search" model="ir.ui.view">
        <field name="name">product_template_search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch"  type="xml">
            <filter name="categ_id" position="after">
                <filter string="Product Partner" name="tmpl_partner" context="{'group_by':'tmpl_partner_ids'}"/>
            </filter>
        </field>
    </record>


    <record id="view_product_product_normal_form" model="ir.ui.view">
        <field name="name">view_product_product_normal_form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tmpl_partner_ids']" position="after">
                <field name="prod_partner_ids" />
            </xpath>
        </field>
    </record>
    <record id="view_product_product_tree" model="ir.ui.view">
        <field name="name">view_product_product_tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="active" position="before">
                <field name="prod_partner_ids" widget="many2many_tags" optional="hide"/>
                <field name="tmpl_partner_ids" widget="many2many_tags" optional="hide"/>
            </field>
        </field>
    </record>

</odoo>
